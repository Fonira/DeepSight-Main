{
  "manifest_version": 3,
  "name": "DeepSight - AI Video Analysis",
  "version": "2.0.0",
  "description": "Analyze YouTube videos with AI. Express synthesis, contextual chat, and cross-platform sync.",
  "author": "DeepSight",
  "homepage_url": "https://www.deepsightsynthesis.com",

  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms",
    "identity",
    "clipboardWrite"
  ],

  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://www.deepsightsynthesis.com/*",
    "https://deep-sight-backend-v3-production.up.railway.app/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://www.deepsightsynthesis.com/*"
      ],
      "js": ["authSync.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://www.deepsightsynthesis.com/*"
      ],
      "js": ["authSyncMain.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    },
    "default_title": "DeepSight"
  },

  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "assets/*"],
      "matches": ["https://www.youtube.com/*", "https://youtube.com/*"]
    }
  ]
}
