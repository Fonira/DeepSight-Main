{
  "manifest_version": 3,
  "name": "DeepSight - AI Video Analysis",
  "version": "1.0.1",
  "description": "Analyze YouTube videos with AI. Get summaries, key concepts, and chat with any video.",
  "author": "DeepSight",
  "homepage_url": "https://deepsight.vercel.app",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "alarms"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://deepsight.vercel.app/*",
    "https://deepsight-production.up.railway.app/*"
  ],
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    },
    {
      "matches": [
        "https://deepsight.vercel.app/*"
      ],
      "js": ["authSync.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "DeepSight"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
