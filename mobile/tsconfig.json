{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/screens/*": [
        "src/screens/*"
      ],
      "@/services/*": [
        "src/services/*"
      ],
      "@/hooks/*": [
        "src/hooks/*"
      ],
      "@/contexts/*": [
        "src/contexts/*"
      ],
      "@/navigation/*": [
        "src/navigation/*"
      ],
      "@/constants/*": [
        "src/constants/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/assets/*": [
        "src/assets/*"
      ],
      "@/theme/*": [
        "src/theme/*"
      ],
      "@/stores/*": [
        "src/stores/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "__tests__/**/*",
    "jest.config.js",
    "jest.setup.js"
  ]
}
